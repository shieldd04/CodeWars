import math

def is_square(n):
    if n < 0:
        print("{}:Negative numbers cannot be square numbers".format(n))
        return False
    else:
        squ = math.sqrt(n)
        list1 = list(range(0, n + 1))
        if squ in list1:
            print("{} is a square number".format(n))
            return True
        else:
            print("{} is not a square number".format(n))
            return False

is_square(-1)
is_square(0)
is_square(3)
is_square(4)
is_square(25)
is_square(26)
